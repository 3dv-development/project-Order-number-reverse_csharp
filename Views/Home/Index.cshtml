@{
    ViewData["Title"] = "ホーム";
}

<div class="row">
    <div class="col-12">
        <h2>受注番号採番システムへようこそ</h2>
        <p class="lead">ログイン中: @ViewData["EmployeeName"] (@ViewData["EmployeeId"])</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">受注番号を採番</h5>
                <p class="card-text">新しい案件の受注番号を自動採番します</p>
                <a href="/Project/Create" class="btn btn-primary">採番する</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">案件を検索</h5>
                <p class="card-text">既存の案件を検索・閲覧します</p>
                <a href="/Project/Search" class="btn btn-secondary">検索する</a>
            </div>
        </div>
    </div>
    @if (Context.Session.GetString("Role") == "admin")
    {
        <div class="col-md-4 mb-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">
                        <i class="bi bi-shield-lock"></i> 管理者メニュー
                    </h5>
                    <p class="card-text">ユーザーアカウント管理機能</p>
                    <div class="d-grid gap-2">
                        <a href="/Account/UserList" class="btn btn-warning">ユーザー一覧</a>
                        <a href="/Account/Register" class="btn btn-outline-warning">新規ユーザー登録</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-5">
    <div class="col-12">
        <h4>カテゴリ一覧</h4>
        <ul class="list-group">
            <li class="list-group-item"><strong>02:</strong> 設計</li>
            <li class="list-group-item"><strong>03:</strong> トレーニング・たよれーる・データ販売</li>
            <li class="list-group-item"><strong>04:</strong> 製品販売</li>
            <li class="list-group-item"><strong>06:</strong> システム受託</li>
            <li class="list-group-item"><strong>07:</strong> システム小規模開発</li>
            <li class="list-group-item"><strong>08:</strong> 付帯業務</li>
        </ul>
    </div>
</div>
