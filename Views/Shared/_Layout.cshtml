<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 受注番号採番システム</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">受注番号採番システム</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @{
                            var employeeId = string.Empty;
                            var employeeName = string.Empty;
                            try
                            {
                                employeeId = Context.Session.GetString("EmployeeId") ?? string.Empty;
                                employeeName = Context.Session.GetString("EmployeeName") ?? string.Empty;
                            }
                            catch
                            {
                                // セッションが利用できない場合は無視
                            }
                        }
                        @if (!string.IsNullOrEmpty(employeeId))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/">ホーム</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Project/Create">採番</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Project/Search">検索</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(employeeId))
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">
                                    @employeeName (@employeeId)
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Logout">ログアウト</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 3Dビジュアル - 受注番号採番システム (C# Edition)
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
